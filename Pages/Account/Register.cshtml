@page
@model SupermarketWEB.Pages.Account.RegisterModel
@{
	ViewData["Title"] = "Registro";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center">@ViewData["Title"]</h1>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="RegisterData.Email" class="form-label"></label>
                <input asp-for="RegisterData.Email" class="form-control" />
                <span asp-validation-for="RegisterData.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RegisterData.Password" class="form-label"></label>
                <input asp-for="RegisterData.Password" type="password" class="form-control" />
                <span asp-validation-for="RegisterData.Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RegisterData.ConfirmPassword" class="form-label"></label>
                <input asp-for="RegisterData.ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="RegisterData.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100">Registrarse</button>
            </div>
        </form>

        <div class="mt-3 text-center">
            ¿Ya tienes una cuenta? <a asp-page="/Account/Login">Inicia sesión</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
